<!-- BEGIN .app-heading -->
<header class="app-header">
  <div class="container-fluid">
    <div class="row gutters">
      <div class="col-xl-5 col-lg-5 col-md-5 col-sm-3 col-4">
          <%= link_to "<i class='icon-menu5'></i>".html_safe, 'javascript:void(0)', class: 'mini-nav-btn', id: 'app-side-mini-toggler' %>
       <%= link_to "<i class='icon-menu5'></i>".html_safe, '#app-side', class: 'onoffcanvas-toggler', data: {toggle: 'onoffcanvas'}, aria: {expanded: true } %>
      </div>
      <div class="col-xl-2 col-lg-2 col-md-2 col-sm-6 col-4">
        <h2>
          <%= link_to root_url, class: 'logo' do %>
            <%= image_tag '1-chart.png' %>
          <% end %>
        </h2>
      </div>
      <div class="col-xl-5 col-lg-5 col-md-5 col-sm-3 col-4">
        <ul class="header-actions">
          

          <li class="dropdown">
            <a href="#" id="userSettings" class="user-settings nav-user-settings" data-toggle="dropdown" aria-haspopup="true">
              <div class="nav-prfile-box">
                <%= image_tag('default_user.png', class: 'nav-user-profile-thumb', alt: 'profile-thumb') %>
            
              </div>
                <span class="user-name"><%= current_user.first_name %></span>
                <i class="icon-chevron-small-down"></i>
            </a>
            <div class="dropdown-menu lg dropdown-menu-right" aria-labelledby="userSettings">
              <ul class="user-settings-list">
                <li>
                  <a href="#">
                    <div class="icon">
                      <i class="icon-account_circle"></i>
                    </div>
                    <p>Profile</p>
                  </a>
                </li>
                <li>
                  <a href="/users/sign_out" data-method="delete">
                    <div class="icon red">
                      <i class="icon-exit_to_app"></i>
                    </div>
                    <p>Logout</p>
                  </a>
                </li>
              </ul>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>    